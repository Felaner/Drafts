<!--Форма-->
<div id="submittedMessageBox"></div>
<form action="/preimushchestva" method="POST" id="form">
    <h3 class="col-12 text-center">Закажите звонок прямо сейчас</h3>
    <div class="form-group">
        <label for="inputName">Имя</label>
        <input name="name" type="text" class="form-control required" id="inputName">
    </div>
    <div class="form-group">
        <label for="inputPhone">Телефон</label>
        <input name="phone" type="tel" class="form-control required" id="inputPhone">
    </div>
    <div class="form-group">
        <label for="textareaMessage">Ваше сообщение</label>
        <textarea name="areaMessage" class="form-control " id="textareaMessage" rows="3"></textarea>
    </div>
    <button class="button">Заказать</button>
</form>